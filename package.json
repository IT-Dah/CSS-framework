{
  "name": "css-framework",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss/index.scss dist/css/styles.css --style=compressed",
    "watch": "sass --watch src/scss/index.scss:dist/css/styles.css",
    "start": "live-server dist",
    "dev": "npm-run-all --parallel watch start",
    "deploy": "npm run build && echo 'Your deployment command here'"
  },
  "dependencies": {
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.80.6"
  }
}
